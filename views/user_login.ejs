<%- include('./partials/header'); %>

<body class="h-screen w-screen flex items-center justify-center bg-gray-100">

    <div class="flex flex-col items-center justify-center bg-white shadow-lg rounded-lg p-6 w-96">
        <!-- Logo Image -->
        <img src="/images/ShopHeaven.png" alt="Shop Heaven Logo" class="object-contain w-32 h-auto mb-4">

        <h2 class="text-2xl font-bold text-center mb-4">Welcome!</h2>
        <p class="text-gray-600 text-center mb-6">Please login to your account</p>

        <!-- Login Form -->
        <form action="/auth/login" method="POST" class="w-full">
            <div class="mb-4">
                <input type="email" name="email" placeholder="Email" required 
                    class="border border-gray-300 rounded-lg w-full p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <div class="mb-4">
                <input type="password" name="password" placeholder="Password" required 
                    class="border border-gray-300 rounded-lg w-full p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            <button type="submit" class="bg-blue-600 text-white font-semibold py-2 rounded-lg w-full hover:bg-blue-700 transition duration-300">
                Login
            </button>
        </form>

        <div class="mt-4 w-full text-center">
            <p class="text-gray-600">or</p>
        </div>

        <!-- Google Login Button -->
        <div class="mt-4 w-full flex justify-center">
            <a href="/auth/google" class="bg-black text-white font-semibold py-2 rounded-lg w-full text-center hover:bg-gray-800 transition duration-300">
                Continue with Google
            </a>
        </div>
    </div>

</body>

<%- include('./partials/footer'); %>
