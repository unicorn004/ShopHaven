<%- include('./partials/header'); %>

<body class="bg-gray-100 font-sans">
  <div class="max-w-screen-lg mx-auto p-4">
    <!-- Order Now Section -->
    <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
      <div class="flex justify-between items-center">
        <h2 class="text-lg font-semibold">Order Now</h2>
        <button class="text-blue-500 font-medium"></button>
      </div>
      <div class="flex space-x-4 mt-6 overflow-x-auto">
        <% if (rnproducts && rnproducts.length > 0) { %>
          <% rnproducts.forEach(function(elem) { %>
            <div class="flex w-32 flex-shrink-0 flex-col items-center bg-gray-50 p-4 rounded-lg shadow">
              <img src="data:image/jpeg;base64,<%= elem.image.toString('base64') %>"
                   alt="<%= elem.name %>" class="h-24 rounded">
              <p class="text-sm text-center mt-2"><%= elem.name %></p>
              <p class="text-xs text-gray-500 line-through">₹<%= Number(elem.price) + 20 %></p>
              <p class="font-bold">₹<%= elem.price %></p>
              <button class="bg-green-600 hover:bg-green-700 text-white px-4 py-1 rounded mt-2">ADD</button>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-gray-500">No products available at the moment.</p>
        <% } %>
      </div>
    </div>

<!-- Offers Section -->
<div class="swiper-container my-10 w-full overflow-hidden max-w-lg mx-auto">
    <div class="swiper-wrapper">
      <div class="swiper-slide rounded-xl overflow-hidden shadow-lg">
        <a href="">
          <img class="w-full h-full object-cover" src="https://cdn.grofers.com/cdn-cgi/image/f=auto,fit=scale-down,q=70,metadata=none,w=720/layout-engine/2023-07/Pet-Care_WEB.jpg" alt="Pet Care">
        </a>
      </div>
      <div class="swiper-slide rounded-xl overflow-hidden shadow-lg">
        <a href="">
          <img class="w-full h-full object-cover" src="images/Food_Offer.jfif" alt="Food Offers">
        </a>
      </div>
      <div class="swiper-slide rounded-xl overflow-hidden shadow-lg">
        <a href="">
          <img class="w-full h-full object-cover" src="images/Household.jfif" alt="Household Supplies">
        </a>
      </div>
      <div class="swiper-slide rounded-xl overflow-hidden shadow-lg">
        <a href="">
          <img class="w-full h-full object-cover" src="images/personalcare.jfif" alt="Personal Care">
        </a>
      </div>
      <div class="swiper-slide rounded-xl overflow-hidden shadow-lg">
        <a href="">
          <img class="w-full h-full object-cover" src="images/drinks.jfif" alt="Beverages">
        </a>
      </div>
    </div>
  </div>
  

    <!-- Grocery & Kitchen Section -->
    <% for (let key in products) { %>
      <div class="bg-white p-6 rounded-lg shadow-lg mb-12">
        <h2 class="text-lg font-semibold"><%= key %></h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mt-4">
          <% products[key].forEach(elem => { %>
            <div class="flex flex-col items-center bg-gray-50 p-4 rounded-lg shadow">
              <img src="data:image/jpeg;base64, <%= elem.image.toString('base64') %>"
                   alt="<%= elem.name %>" class="w-24 h-24 rounded">
              <p class="text-sm text-center mt-2"><%= elem.name %></p>
              <a class="bg-green-600 hover:bg-green-700 text-white text-xs font-semibold px-4 py-1 mt-2 rounded"
                 href="/cart/add/<%= elem._id %>">ADD</a>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- Footer Section -->
    <% if (somethingInCart) { %>
      <div class="fixed bottom-0 inset-x-0 bg-white p-4 rounded-t-lg shadow-lg z-50">
        <div class="flex justify-between items-center mb-4">
          <div>
            <p class="text-sm font-medium">Get FREE delivery</p>
            <p class="text-xs text-gray-500" id="free-delivery-message"></p>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <div><%= cartCount %> Item<%= cartCount > 1 ? 's' : '' %></div>
          <a href="/cart"
             class="flex items-center justify-center w-1/3 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg text-lg font-semibold">Next
            <i class="text-2xl ml-2 ri-arrow-right-s-fill"></i>
          </a>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    var swiper = new Swiper('.swiper-container', {
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: 'auto',
      coverflowEffect: {
        rotate: 10,
        stretch: 0,
        depth: 100,
        modifier: 1,
        slideShadows: true,
      },
      loop: true,
      autoplay: {
        delay: 2000,
        disableOnInteraction: false,
      },
    });
    const randomAmount = Math.floor(Math.random() * (200 - 100 + 1)) + 100;
    document.getElementById('free-delivery-message').textContent = `Add products worth ₹${randomAmount} more`;
  </script>

  <script>
    window.addEventListener('scroll', function () {
      localStorage.setItem('scrollPosition', window.scrollY);
    });

    window.addEventListener('load', function () {
      const scrollPosition = localStorage.getItem('scrollPosition');
      if (scrollPosition) {
        window.scrollTo(0, scrollPosition);
      }
    });
  </script>
</body>
<%- include('./partials/footer'); %>
